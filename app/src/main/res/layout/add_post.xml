<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  >

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/addPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20px"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/addPostGroup"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="15px"
      >

      <ImageButton
        android:id="@+id/addPostImageButton"
        android:layout_width="44px"
        android:layout_height="44px"
        android:src="@drawable/camera"
        android:background="@drawable/border"
        />

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addPostImageGroup"
        android:layout_width="276px"
        android:layout_height="44px"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toRightOf="@id/addPostImageButton"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
      android:id="@+id/addPostTitleTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/addPostGroup"
      android:text="제목"
      android:textStyle="bold"
      android:layout_marginTop="25px"
      />

    <EditText
      android:id="@+id/addPostTitleEditText"
      android:layout_width="match_parent"
      android:layout_height="37px"
      app:layout_constraintTop_toBottomOf="@id/addPostTitleTextView"
      android:inputType="textMultiLine"
      android:background="@drawable/border_line"
      />

    <TextView
      android:id="@+id/addPostContentTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/addPostTitleEditText"
      android:text="내용"
      android:textStyle="bold"
      android:layout_marginTop="11px"
      />

    <EditText
      android:id="@+id/addPostContentEditText"
      android:layout_width="match_parent"
      android:layout_height="171px"
      app:layout_constraintTop_toBottomOf="@id/addPostContentTextView"
      android:inputType="textMultiLine"
      android:background="@drawable/border_line"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <Button
    android:id="@+id/addPostButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="저장"
    android:background="@drawable/gray_button"
    />


</androidx.constraintlayout.widget.ConstraintLayout>