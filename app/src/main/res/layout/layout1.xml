<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="48dp"
  android:id="@+id/layout1"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:id="@+id/title1"
    >

    <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="title1"
      android:textSize="16dp"
      android:id="@+id/title1Text"
      />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:id="@+id/imageBox1"
      app:layout_constraintTop_toBottomOf="@id/title1Text"
      >
      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/imageConstraintLayout1"
        >
        <ImageView
          android:layout_width="160dp"
          android:layout_height="0dp"
          app:layout_constraintDimensionRatio="1:1"
          android:scaleType="fitXY"
          android:src="@drawable/image1"
          android:id="@+id/image1"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/image2"
          app:layout_constraintHorizontal_chainStyle="packed"
          android:layout_marginEnd="6dp"
          />
        <ImageView
          android:layout_width="160dp"
          android:layout_height="0dp"
          app:layout_constraintDimensionRatio="1:1"
          android:scaleType="fitXY"
          android:src="@drawable/image2"
          android:id="@+id/image2"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toRightOf="@id/image1"
          />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/imageConstraintLayout1"
        >
        <ImageView
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintDimensionRatio="1:1"
          android:scaleType="fitXY"
          android:src="@drawable/image3"
          android:id="@+id/image3"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/image4"
          app:layout_constraintHorizontal_chainStyle="packed"
          android:layout_marginRight="6dp"
          />
        <ImageView
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintDimensionRatio="1:1"
          android:scaleType="fitXY"
          android:src="@drawable/image4"
          android:id="@+id/image4"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintLeft_toRightOf="@id/image3"
          />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:id="@+id/title2"
    app:layout_constraintTop_toBottomOf="@id/title1"
    >

    <TextView

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="title2"
      android:textSize="16dp"
      android:id="@+id/title2Text"

      />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/imageBox2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/title2Text"
      android:background="@color/grayBackground"
      android:paddingTop="16dp"
      android:paddingBottom="16dp"
      >

      <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:layout_marginVertical="15dp"

        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/imageSlide"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>